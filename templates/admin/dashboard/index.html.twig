{% extends "admin/base.html.twig" %}

{% block title %}Tableau de Bord {% endblock %}

{% block body %}

<div class="container-fluid">

    <div class="row">
            <div class="col">
                <div class="card bg-primary text-white mb-3 text-center">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-4">
                                <i class="fas fa-users fa-3x"></i>
                            </div>
                            <div class="col-8">
                                <h4 class="card-title">{{ stats.users }} rédacteurs inscrits</h4>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        
        
        
            <div class="col">
                <div class="card text-white bg-dark mb-3 text-center">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-4">
                                <i class="fas fa-file fa-3x"></i>
                            </div>
                            <div class="col-8">
                                <h4 class="card-title">{{ stats.validate }} en ligne</h4>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="card text-white bg-warning text-center">
                   <div class="card-body">
                       <div class="row">
                           <div class="col-4">
                                <i class="fas fa-folder fa-3x">
                                </i>
                           </div>
                           <div class="col-8">
                           <h4 class="card-title">  {{ stats.unvalidate }} non publié(s)</h4>
                           </div>
                       </div>
                   </div> 
                </div>
            </div>
            <div class="col">
                 <div class="card text-white bg-success text-center">
                   <div class="card-body">
                       <div class="row">
                           <div class="col-4">
                                <i class="fas fa-comments fa-3x">
                                </i>
                           </div>
                           <div class="col-8">
                           <h4 class="card-title"> {{ stats.total }} publications au total </h4>
                           </div>
                       </div>
                   </div> 
                </div>
            </div>
    
    </div>


</div>

{% endblock %}